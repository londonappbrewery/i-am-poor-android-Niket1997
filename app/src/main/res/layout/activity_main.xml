<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d8e0"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/text_I_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="200sp"
        android:layout_marginRight="200sp"
        android:text="@string/text_I_am"
        android:textColor="#000000"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="55sp"
        android:layout_marginRight="35sp"
        android:text="@string/text_poor"
        android:textColor="#000000"
        android:textSize="56sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_poor"
        android:layout_marginTop="57dp"
        android:contentDescription="@string/image_desc"
        app:srcCompat="@drawable/coal" />

</RelativeLayout>
